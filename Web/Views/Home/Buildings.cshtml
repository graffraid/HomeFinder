@using Domain.Entities
@model List<Building>

<div class="row">
    <div class="col-md-4">
        <table class="table table-striped table-hover">
            <thead>
            <tr>
                <th>No</th>
                <th>Street</th>
                <th>Number</th>
            </tr>
            </thead>
            <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {
                <tr>
                    <td>@i</td>
                    <td>@Model[i].Street</td>
                    <td>@Model[i].No</td>
                </tr>
            }
            </tbody>
        </table>
        <div>
            <button type="button" class="btn btn-primary" data-toggle="collapse" data-target="#collapse" aria-expanded="false" aria-controls="collapse">Add new</button>
            <div class="collapse" id="collapse">
                <form class="form" id="buildingform">
                    <div class="form-group">
                        <label for="street">Street</label>
                        <input class="form-control" id="street" name="street" placeholder="Street">
                    </div>
                    <div class="form-group">
                        <label for="shortstreet">Short Street</label>
                        <input class="form-control" id="shortstreet" name="shortstreet" placeholder="Short Street">
                    </div>
                    <div class="form-group">
                        <label for="homenumber">Building number</label>
                        <input class="form-control" id="homenumber" name="homenumber" placeholder="Building number">
                    </div>
                    <button type="button" class="btn btn-default" id ="newbuilding">Create</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8" id="map" style="width:600px; height:450px">
    </div>
</div>
