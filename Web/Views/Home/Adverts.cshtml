@using Domain.Entities
@model List<Advert>

<div class="row">
    @{
        foreach (var advert in Model)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    <div class="caption">
                        <h3 class="@advert.Type price">@advert.Price</h3>
                        <p class="@advert.Type">Адрес: @advert.Building.Street, @advert.Building.No</p>
                        <p class="@advert.Type">Комнат: @advert.RoomCount</p>
                        <p class="@advert.Type">Этаж: @advert.Floor/@advert.TotalFloor</p>
                        <p class="@advert.Type">Площадь: @advert.Space</p>
                        <p>
                            <a href="@Url.Action("Advert", "Home", new {id = advert.Id})" class="btn btn-primary @advert.Type" role="button">Details</a> <a target="_blank" href="@advert.Url" class="btn btn-default @advert.Type" role="button">Go to Avito</a>
                        </p>
                    </div>
                </div>
            </div>
        }
    }
    
</div>