@using Domain.Entities
@model List<Advert>
@{
    ViewBag.Title = "Adverts";
}

<div class="row">
    @{
        foreach (var advert in Model)
        {
            <div class="col-sm-6 col-md-4">
                <div class="thumbnail">
                    @*<img src= "" alt="...">*@
                    <div class="caption">
                        <h3>@advert.Price</h3>
                        <p>Адрес: @advert.Building.Street, @advert.Building.No</p>
                        <p>Комнат: @advert.RoomCount</p>
                        <p>Этаж: @advert.Floor/@advert.TotalFloor</p>
                        <p>Площадь: @advert.Space</p>
                        <p>
                            <a href="#" class="btn btn-primary" role="button">Button</a> <a href="#" class="btn btn-default" role="button">Button</a>
                        </p>
                    </div>
                </div>
            </div>
        }
    }
    
</div>